<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Vistas.Componentes"
             Title="Componentes">
   
    <VerticalStackLayout>
        <Button Text="Tomar Foto" Clicked="OnTakePhotoButtonClicked" />
        <Image x:Name="PhotoImage" WidthRequest="300" HeightRequest="300" />
        <Label TextColor="Black" x:Name="base64" />
        <Label TextColor="Black" x:Name="extensionLabel" />

        <Label x:Name="ubicacion"
                       Text="Coordinates will be displayed here"
                       FontSize="20"
                       TextColor="Black"
                       VerticalOptions="CenterAndExpand"
                       HorizontalOptions="CenterAndExpand">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </Label.GestureRecognizers>
        </Label>
        <Button Text="Obtener localizacion"
                        Clicked="Button_Clicked"
                        VerticalOptions="CenterAndExpand"
                        HorizontalOptions="CenterAndExpand" />
        <Button Text="Enviar datos"
                Clicked="OnTransformarFotoClicked" />
        <Button Text="Seleccionar Foto de la GalerÃ­a"
                Clicked="OnSelectPhotoButtonClicked" />
    </VerticalStackLayout>
</ContentPage>