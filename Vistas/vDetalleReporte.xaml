<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Vistas.vDetalleReporte"
             Title="vDetalleReporte">

    <StackLayout>
        <Grid RowDefinitions="150,.9*">
            <Image Aspect="AspectFill" Source="siniestro.png"/>
            <Grid BackgroundColor="#4F3F9B" Opacity=".9"/>

            <Grid ColumnDefinitions="150">
                <Label Text="DETALLE DEL REPORTES" 
             HorizontalOptions="Center"
             VerticalOptions="Center"
             TextColor="White"
             HorizontalTextAlignment="Center"
             FontSize="20"/>
            </Grid>

        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label x:Name="lbl_foto"
            Grid.Row="0"
            HorizontalTextAlignment="Center"/>
            <Label Grid.Row="1"
           x:Name="txtUbi"
           Margin="70,0,70,0"
            HorizontalTextAlignment="Center">

            </Label>

        </Grid>
    </StackLayout>
</ContentPage>